doctype html
head
    meta(charset='utf-8')
    link(rel='stylesheet' href='/build/css/user.css')
    script(src="/src/views/jquery.js")
    script(src="/src/scripts/user.js")
    script(src="/src/scripts/request.js")

div.main 
    div.user_info

    div.user_change_info
        input.name(type="text")
        input.date(type="date")
        input.email(type="email")

        select.role
            option(value="all")
                ="Вывести все"
            option(value="admin")
                ="Администратор"
            option(value="user")
                ="Пользователь"

        select.status
            option(value="all")
                ="Вывести все"
            option(value="unconfirmed")
                ="Неподтвержденный"
            option(value="active")
                ="Активный"
            option(value="blocked")
                ="Заблокированный"

    button.save()
        ="Сохранить изменения"

    button.friends()
        ="Друзья"

    button.news()
        ="Новости"

    button.back()
        ="Вернуться назад"
        